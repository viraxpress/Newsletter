<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <title>Subscribe Newsletter</title>
    </head>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceContainer name="content">
            <block class="Magento\Newsletter\Block\Subscribe" name="page.footer.newsletter" template="Magento_Newsletter::subscribe.phtml">
                <container name="newsletter.form.additional.info" as="newsletter_form_additional_info"/>
            </block>
        </referenceContainer>
    </body>
</page>
